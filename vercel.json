{
  "cleanUrls": true,
  "trailingSlash": true,

  "redirects": [
    { "source": "/cart.html",                "destination": "/cart/",                 "permanent": false },
    { "source": "/checkout.html",            "destination": "/checkout/",             "permanent": false },
    { "source": "/shop.html",                "destination": "/shop/",                 "permanent": true  },
    { "source": "/product-vsop-jacket.html", "destination": "/product-vsop-jacket/",  "permanent": true  },
    { "source": "/product-vsop-shorts.html", "destination": "/product-vsop-shorts/",  "permanent": true  },
    { "source": "/collection-vsop.html",     "destination": "/collection-vsop/",      "permanent": true  },
    { "source": "/nav.html",                 "destination": "/nav/",                  "permanent": true  },
    { "source": "/footer.html",              "destination": "/footer/",               "permanent": true  }
  ],

  "headers": [
    {
      "source": "/nav/",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/footer/",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/products.json",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300, must-revalidate" }
      ]
    }
  ]
}
